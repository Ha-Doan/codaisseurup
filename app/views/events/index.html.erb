<div class="row">
<h3>Your events</h3>
<hr>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-body">
        <% @events.each do |event| %>
        <div class="col">
          <div class="row-md-7">
            <h4><%= image_tag("https://tinyurl.com/y8ulb6n4") %></h4>
          </div>
          <div class="row-md-3">
            <%= link_to "View", event, class: "btn btn-default" %>
            <%= link_to "Update", edit_event_path(event), class: "btn btn-default" %>
         </div>
        </div>
        <% end %>

      </div>
    </div>

    <%= link_to "+ CREATE NEW EVENT", new_event_path, class: "btn btn-primary" %>
  </div>
</div>
