<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>

    <p><%= @event.description %> </p>
    <p>Location: <%= @event.location %> </p>
    <p>Price: <%= @event.price %> <%= @event.price <10 ? "DISCOUNT!" : "" %></p>
    <p>Capacity: <%= @event.capacity %></p>

    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_drink ? ("<s>Drink included</s>").html_safe : "Drink" %></li>
      <li><%= !@event.includes_food ? ("<del>Food included</del>").html_safe : "Food" %></li>

    </ul>

  </div>

</div>
<!-- Photos -->
<h4>Photos</h4>
<% @event.photos.each do |photo| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= image_tag photo.image.thumbnail %>
  </div>
</div>
<% end %>
<%= link_to "Back", events_path, class: "btn btn-default" %>
